# RedisLite Configuration File
# Copy this to .env and adjust values as needed

# Server Configuration
REDISLITE_TCP_PORT=6379
REDISLITE_HTTP_PORT=8000
REDISLITE_HOST=0.0.0.0

# Memory Management
REDISLITE_MAX_MEMORY_MB=100
REDISLITE_MAX_KEYS=1000000
REDISLITE_EVICTION_POLICY=lru

# Performance Tuning
REDISLITE_TTL_CHECK_INTERVAL_MS=100
REDISLITE_LOCK_STRIPE_COUNT=16

# Persistence (Crash-Safe AOF with fsync policies)
REDISLITE_PERSISTENCE_ENABLED=true
REDISLITE_DATA_DIR=./data
# Fsync policy: "always" (safest), "everysec" (balanced, default), "no" (fastest)
REDISLITE_AOF_FSYNC_POLICY=everysec
REDISLITE_AOF_FSYNC_INTERVAL_SECS=1.0
REDISLITE_SNAPSHOT_INTERVAL_SECS=30

# Backpressure & Connection Limits (Issue #5)
REDISLITE_MAX_CLIENTS=1000
REDISLITE_MAX_CLIENT_BUFFER_MB=10
REDISLITE_SOCKET_KEEPALIVE=true
REDISLITE_SOCKET_KEEPALIVE_INTERVAL_SEC=300

# Replication (Optional)
REDISLITE_REPLICA_ENABLED=false
REDISLITE_REPLICA_MODE=master
# REDISLITE_REPLICA_HOST=localhost
# REDISLITE_REPLICA_PORT=6379

# Observability
REDISLITE_LOG_LEVEL=INFO
REDISLITE_METRICS_ENABLED=true
